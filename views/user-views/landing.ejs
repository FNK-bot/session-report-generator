<%- include('./partials/header') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <main class="container mt-5">
        <div class="text-center">
            <h1 class="display-4" id="welcomeText">Welcome to Communication Report Generator</h1>
            <p class="lead mt-3" id="descriptionText">This tool allows you to create communication session reports
                effortlessly.</p>
            <a href="/generate" class="btn btn-primary btn-lg mt-4" id="startButton">Get Started</a>
        </div>
    </main>
    <%- include('./partials/footer') %>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
        <script>
            // Animate elements using GSAP
            gsap.from("#welcomeText", { opacity: 0, y: -50, duration: 1 });
            gsap.from("#descriptionText", { opacity: 0, y: 20, duration: 1.2, delay: 0.5 });
            gsap.from("#startButton", { opacity: 0, scale: 0.8, duration: 1, delay: 1 });
        </script>