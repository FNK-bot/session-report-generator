<%- include('./partials/header') %>
    <main class="container mt-5 text-center">
        <h1 class="display-3 fw-bold text-primary mb-4" id="welcomeText">
            Welcome to Communication Report Generator
        </h1>
        <p class="lead text-muted mb-5" id="descriptionText">
            Effortlessly create detailed communication session reports with our powerful tools.
        </p>
        <div class="d-flex flex-column gap-3 justify-content-center align-items-center">
            <a href="/generate-daily-session-report" class="btn btn-primary btn-lg" id="dailyReportButton">
                Generate Daily Session Report
            </a>
            <a href="/generate-audio-task-report" class="btn btn-success btn-lg " id="audioReportButton">
                Generate Audio Task Report
            </a>
        </div>

    </main>

    <%- include('./partials/footer') %>


        <script>
            // GSAP Animations
            gsap.from("#welcomeText", { opacity: 0, y: -50, duration: 1 });
            gsap.from("#descriptionText", { opacity: 0, y: 20, duration: 1.2, delay: 0.5 });
            gsap.from("#dailyReportButton", { opacity: 0, scale: 0.8, duration: 1, delay: 1, ease: "bounce" });
            gsap.from("#audioReportButton", { opacity: 0, scale: 0.8, duration: 1, delay: 1.5, ease: "bounce" });


        </script>

        <!-- Custom Styles -->
        <style>
            body {
                background: linear-gradient(to right, #f8f9fa, #e9ecef);
                min-height: 100vh;
            }

            .btn {
                padding: 0.75rem 1.5rem;
                border-radius: 50px;
                font-size: 1.2rem;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

            .btn-primary:hover,
            .btn-success:hover {
                transform: scale(1.1);
                box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
            }

            .spinner-border {
                width: 3rem;
                height: 3rem;
            }

            @media (max-width: 768px) {
                .display-3 {
                    font-size: 2rem;
                }

                .lead {
                    font-size: 1rem;
                }

                .btn {
                    font-size: 1rem;
                }
            }
        </style>