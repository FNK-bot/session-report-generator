<%- include('./partials/header') %>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Generate Audio Task Report</h1>
        <form id="sessionForm" action="/generate-audio-task-report" method="POST" novalidate>
            <div class="mb-3">
                <label for="audioTaskOverview" class="form-label">Audio Task Overview / Task Description</label>
                <textarea class="form-control" id="audioTaskOverview" name="audioTaskOverview" rows="4"
                    required></textarea>
                <div class="invalid-feedback">Please provide a Audio Task overview Audio Task Overview / Task
                    Description</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Submitions</label>

                <% students.forEach((student, index)=> { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="<%= student %>" id="student<%= index %>"
                            name="submitions">
                        <label class="form-check-label" for="student<%= index %>">
                            <%= student %>
                        </label>
                    </div>
                    <% }) %>

            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date" name="date" required>
                <div class="invalid-feedback">Please provide a valid Date</div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Generate Report</button>
            </div>
        </form>
    </div>
    <%- include('./partials/footer') %>
        <script>
            (() => {
                const form = document.getElementById('sessionForm');
                form.addEventListener('submit', (event) => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            })();
        </script>